<% include ../partials/header %>
<div class="uk-container uk-container-small uk-flex uk-flex-center">
	<form class="uk-width-1-3@s" method="post" action="/auth/forgot">
		<h2 class="uk-text-center">Mot de passe oublié</h2>
		<% if (typeof error != 'undefined') { %><p class="uk-alert uk-alert-danger"><%= error %></p><% } %>
		<% if (typeof message != 'undefined') { %><p class="uk-alert uk-alert-success"><%= message %></p><% } %>
		<div class="uk-margin">
			<div class="uk-inline uk-width-1-1">
				<span class="uk-form-icon" uk-icon="icon: user"></span>
				<input type="email" class="uk-input" placeholder="Ton adresse email" name="email" />
			</div>
		</div>
		<div class="uk-margin">
			<input type="submit" class="uk-input uk-button-primary" value="Recevoir un lien de récupération" />
		</div>
	</form>
</div>
<% include ../partials/footer %>
